{
  "name": "denote-app",
  "version": "0.2.0",
  "description": "Note taking app for the STEM students.",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "APP_DEV=true electron .",
    "build": "webpack --mode production --config webpack.common.js",
    "deploy": "export GH_TOKEN=$(cat ./gh_token) && npm i && npm run build && rm -rf dist && electron-builder build --mac --win --publish always",
    "watch": "webpack --config webpack.common.js --watch",
    "dist": "npm i && npm run build && rm -rf dist && electron-builder build --publish never"
  },
  "build": {
    "appId": "com.denote.app",
    "productName": "Denote",
    "copyright": "Copyright Â© 2023 Denote",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "main.js",
      "package.json",
      "assets/*",
      "src/public/*",
      "index.html",
      "update_logs.html",
      "forge.config.js",
      "webpack.common.js",
      "package-lock.json",
      "package.json",
      "scripts/*"
    ],
    "mac": {
      "target": {
        "target": "default",
        "arch": [
          "universal"
        ]
      },
      "category": "public.app-category.productivity",
      "icon": "assets/Denote-Icon-Rounded-1024.icns",
      "identity": "Edgar Baudry (T3Q5PMNQ47)",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      },
      "icon": "assets/Denote-Icon-Rounded-256.ico"
    },
    "nsis": {
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "ouragan84",
        "repo": "denote-releases",
        "releaseType": "release"
      }
    ],
    "afterSign": "scripts/notarize.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ouragan84/denote-releases.git"
  },
  "publish": {
    "provider": "github",
    "owner": "ouragan84",
    "repo": "denote-releases",
    "releaseType": "release"
  },
  "keywords": [
    "editorjs",
    "latex",
    "math",
    "mathematics",
    "markdown",
    "markdown-editor",
    "text-editor",
    "editor",
    "note",
    "denote",
    "note-taking",
    "stem",
    "students",
    "education",
    "svg-drawing",
    "excalidraw",
    "drawing",
    "svg",
    "student",
    "science",
    "engineering",
    "technology",
    "maths",
    "graphing",
    "desmos",
    "coding",
    "programming",
    "code",
    "python"
  ],
  "author": "Denote",
  "license": "ISC",
  "dependencies": {
    "@tiptap/core": "^2.0.3",
    "@tiptap/extension-code-block-lowlight": "^2.0.3",
    "@tiptap/extension-color": "^2.0.3",
    "@tiptap/extension-document": "^2.0.3",
    "@tiptap/extension-dropcursor": "^2.0.3",
    "@tiptap/extension-highlight": "^2.0.3",
    "@tiptap/extension-image": "^2.0.3",
    "@tiptap/extension-list-item": "^2.0.3",
    "@tiptap/extension-paragraph": "^2.0.3",
    "@tiptap/extension-placeholder": "^2.0.3",
    "@tiptap/extension-task-item": "^2.0.3",
    "@tiptap/extension-task-list": "^2.0.3",
    "@tiptap/extension-text": "^2.0.3",
    "@tiptap/extension-text-style": "^2.0.3",
    "@tiptap/extension-typography": "^2.0.3",
    "@tiptap/extension-underline": "^2.0.3",
    "@tiptap/pm": "^2.0.3",
    "@tiptap/react": "^2.0.3",
    "@tiptap/starter-kit": "^2.0.3",
    "css-loader": "^6.7.3",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.4.8",
    "electron-store": "^8.1.0",
    "electron-updater": "^5.3.0",
    "fs": "^0.0.1-security",
    "highlight": "^0.2.4",
    "install": "^0.13.0",
    "jsdom": "^21.1.1",
